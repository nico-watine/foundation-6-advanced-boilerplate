root = true

[*]
indent_style = tab
indent_size = tab
tab_width = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Ignore config.yml
[config.yml]
charset = none
end_of_line = none
insert_final_newline = none
trim_trailing_whitespace = none
indent_style = none
indent_size = none

[*.md]
trim_trailing_whitespace = false

[*.json]
indent_size = 2
insert_final_newline = ignore

[**-min.js]
indent_style = ignore
insert_final_newline = ignore
